# SDTM IG RAG System - Environment Configuration
# Copy this file to .env and update values for your environment

# PostgreSQL Database Configuration
PGHOST=localhost
PGPORT=5432
PGDATABASE=sdtm_ig_rag
PGUSER=sdtm_user
PGPASSWORD=sdtm_password

# Connection Pooling
DB_MIN_POOL_SIZE=2
DB_MAX_POOL_SIZE=10

# Embedding Model Configuration
# Provider options: "mock" (for training), "openai", "claude"
EMBEDDING_PROVIDER=mock
EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_DIMENSIONS=1536
EMBEDDING_BATCH_SIZE=100

# API Keys (only needed for production embedding providers)
OPENAI_API_KEY=sk-...
ANTHROPIC_API_KEY=sk-ant-...

# Text Chunking Configuration
CHUNK_SIZE=500          # Approximate tokens per chunk
CHUNK_OVERLAP=100       # Tokens of overlap between chunks
MAX_CHUNK_CHARS=3000    # Maximum characters per chunk
MIN_CHUNK_CHARS=100     # Minimum characters per chunk

# Query Configuration
TOP_K_CHUNKS=5                    # Number of chunks to retrieve
SIMILARITY_THRESHOLD=0.6          # Minimum similarity score (0-1)
CT_TOP_K=10                       # Controlled terminology results
ASSUMPTION_TOP_K=3                # Mapping assumptions results

# RAG Configuration
MAX_CONTEXT_TOKENS=4000                    # Max tokens for AI context
INCLUDE_CT_IN_CONTEXT=true                 # Include CT in retrieved context
INCLUDE_ASSUMPTIONS_IN_CONTEXT=true        # Include assumptions in context
DOMAIN_SPECIFIC_CONTEXT=true               # Enable domain-specific handling

# Logging
LOG_LEVEL=INFO
LOG_FILE=/tmp/sdtm_ig_rag.log

# Development
DEBUG=false
