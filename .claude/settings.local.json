{
  "env": {
    "CLAUDE_CODE_EXPERIMENTAL_AGENT_TEAMS": "1",
    "CLAUDE_CODE_DISABLE_BACKGROUND_TASKS": "0"
  },
  "permissions": {
    "allow": [
      "Bash(*)",
      "Write(orchestrator/outputs/*)",
      "WebFetch(domain:github.com)",
      "WebFetch(domain:autocontentapi.com)",
      "Bash(python:*)",
      "Bash(ls:*)",
      "WebSearch",
      "WebFetch(domain:api-evsrest.nci.nih.gov)",
      "WebFetch(domain:wiki.nci.nih.gov)",
      "Bash(curl:*)",
      "WebFetch(domain:www.lexjansen.com)",
      "mcp__plugin_context7_context7__resolve-library-id",
      "Bash(python -c:*)",
      "Bash(find:*)",
      "Task",
      "Task(spec-analyzer, data-validator, function-auditor, training-reviewer, pipeline-runner, production-programmer, qc-programmer, biostatistician)",
      "mcp__plugin_playwright_playwright__browser_navigate",
      "mcp__plugin_playwright_playwright__browser_take_screenshot",
      "mcp__plugin_playwright_playwright__browser_close"
    ],
    "deny": []
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Write",
        "hooks": [
          {
            "type": "command",
            "command": "python -c \"import sys, json; data=json.loads(sys.stdin.read()); path=data.get('tool_input',{}).get('file_path',''); sys.exit(1) if any(s in path.lower() for s in ['.env','api_key','credential','secret']) else sys.exit(0)\""
          }
        ]
      }
    ]
  },
  "teammateMode": "in-process"
}
